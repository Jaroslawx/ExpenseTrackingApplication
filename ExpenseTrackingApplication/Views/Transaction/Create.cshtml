@using ExpenseTrackingApplication.Data.Enum
@model ExpenseTrackingApplication.Models.Transaction

@{
    ViewData["Title"] = "Create Transaction";
}

<h2>Create Transaction</h2>

<form asp-action="Create">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="BudgetId" value="@ViewBag.BudgetId"/>
    <div class="form-group">
        <label asp-for="Recipient" class="control-label">Recipient</label>
        <input asp-for="Recipient" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Amount" class="control-label">Amount</label>
        <input asp-for="Amount" class="form-control" type="number"/>
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date" class="control-label">Date</label>
        <input asp-for="Date" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")"/>
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Category" class="control-label">Transaction Category</label>
        <select asp-for="Category" asp-items="@Html.GetEnumSelectList<TransactionCategory>()" class="form-control">
            <option selected="selected" value="">Select Category</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Description</label>
        <input asp-for="Description" class="form-control"/>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary"/>
    </div>
</form>

<div>
    <a asp-controller="Budget" asp-action="Edit" asp-route-id="@ViewBag.BudgetId" class="btn btn-secondary">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
