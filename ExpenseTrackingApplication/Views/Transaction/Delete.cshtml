@model ExpenseTrackingApplication.Models.Transaction

@{
    ViewData["Title"] = "Delete Transaction";
}

<h2>Delete Transaction</h2>

<h3>Are you sure you want to delete this transaction?</h3>

<form method="post" asp-action="Delete">
    <div class="form-group">
        <label>Recipient</label>
        <p>@Model.Recipient</p>
    </div>
    <div class="form-group">
        <label>Amount</label>
        <p>@Model.Amount</p>
    </div>
    <div class="form-group">
        <label>Date</label>
        <p>@Model.Date.ToShortDateString()</p>
    </div>
    <div class="form-group">
        <label>Category</label>
        <p>@Model.Category</p>
    </div>
    <div class="form-group">
        <label>Description</label>
        <p>@Model.Description</p>
    </div>
</form>

<form method="post" asp-action="DeleteTransaction">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Details" asp-route-id="@Model.BudgetId" class="btn btn-secondary">Cancel</a>
</form>