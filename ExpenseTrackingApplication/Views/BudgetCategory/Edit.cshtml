@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ExpenseTrackingApplication.ViewModels.BudgetViewModels.BudgetCategoryEditViewModel

<h2>Edit Budget Category</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Limit">Monthly Limit</label>
        <input asp-for="Limit" class="form-control" type="number"/>
        <span asp-validation-for="Limit" class="text-danger"></span>
    </div>
    
    <div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-info" asp-controller="BudgetCategoryTransactionCategory" asp-action="AssignTransactionCategories" asp-route-budgetCategoryId="@Model.Id">Next</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}