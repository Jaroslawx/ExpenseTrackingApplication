@model ExpenseTrackingApplication.Models.BudgetCategory

@{
    ViewData["Title"] = "Delete Budget Category";
}

<h2>Delete Budget Category</h2>

<h3>Are you sure you want to delete this category?</h3>
<div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="BudgetId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Details" asp-controller="Budget" asp-route-id="@Model.BudgetId" class="btn btn-secondary">Cancel</a>
    </form>
</div>
