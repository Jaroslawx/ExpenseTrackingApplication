@model ExpenseTrackingApplication.Models.BudgetCategory

@{
ViewData["Title"] = "Delete Budget Category";
}

<h1>@ViewData["Title"]</h1>

<h4>Are you sure you want to delete this budget category?</h4>
<hr />

<form asp-action="Delete" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <input asp-for="Type" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Limit" class="control-label"></label>
        <input asp-for="Limit" class="form-control" readonly />
    </div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="BudgetId" />

    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
