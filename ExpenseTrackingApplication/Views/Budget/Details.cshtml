@model ExpenseTrackingApplication.ViewModels.BudgetViewModels.BudgetDetailsViewModel

@{
ViewData["Title"] = "Budget Details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Details for Budget: @Model.Budget.Name</h2>
    <div>
        <a asp-controller="Report" asp-action="Generate" class="btn btn-success" asp-route-id="@Model.Budget.Id">Create Report</a>
        <a asp-action="Edit" asp-route-id="@Model.Budget.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Overview" class="btn btn-primary">Back to List</a>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Name:</h5>
                <p class="card-text">@Model.Budget.Name</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Balance:</h5>
                <p class="card-text balance @(Model.Budget.Balance >= 0 ? "positive" : "negative")">
                    @Model.Budget.Balance.ToString("C")
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total Transactions:</h5>
                <p class="card-text">@Model.TotalTransactionAmount.ToString("C")</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total Income:</h5>
                <p class="card-text">@Model.TotalIncomeAmount.ToString("C")</p>
            </div>
        </div>
    </div>
</div>

<div>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>Budget Categories</h4>
        <a class="btn btn-success" asp-controller="BudgetCategory" asp-action="AddNewBudgetCategory" asp-route-budgetId="@Model.Budget.Id">Add Budget Category</a>
    </div>
    <div class="row">
        @foreach (var category in Model.BudgetCategories)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@category.Name</h5>
                        <p class="card-text">
                            <strong>Current Spending:</strong> @category.CurrentSpending<br/>
                            <strong>Monthly Limit:</strong> @category.Limit
                        </p>
                        <a class="btn btn-primary" asp-controller="BudgetCategory" asp-action="Details" asp-route-id="@category.Id">View Details</a>
                        <a class="btn btn-warning" asp-controller="BudgetCategory" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                        <a class="btn btn-danger" asp-controller="BudgetCategory" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>Transactions & Incomes</h4>
        <div>
            <a asp-controller="Transaction" asp-action="Create" asp-route-budgetId="@Model.Budget.Id" class="btn btn-warning">Add Transaction</a>
            <a asp-controller="Income" asp-action="Create" asp-route-budgetId="@Model.Budget.Id" class="btn btn-info">Add Income</a>
        </div>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Type</th> <!-- Transaction/Income -->
            <th>Recipient/Source</th>
            <th>Amount</th>
            <th>Category</th>
            <th>Description</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var entry in Model.CombinedEntries)
        {
        <tr>
            <td>@entry.Date.ToShortDateString()</td>
            <td>
                <span style="color:@(entry.Type == "Income" ? "green" : "black")">
                    @entry.Type
                </span>
            </td>
            <td>@entry.RecipientOrSource</td>
            <td>@entry.Amount</td>
            <td>@entry.Category</td>
            <td>@entry.Description</td>
        </tr>
        }
        </tbody>
    </table>
</div>

<div>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>Bills</h4>
        <div>
            <a asp-controller="Bill" asp-action="Create" asp-route-budgetId="@Model.Budget.Id" class="btn btn-warning">Add Bill</a>
        </div>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Amount</th>
            <th>DueDate</th>
            <th>Frequency</th>
            <th>Status</th>
            <th>Days Left</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var bill in Model.Bills)
        {
        <tr>
            <td>@bill.Name</td>
            <td>@bill.Amount</td>
            <td>@bill.DueDate.ToShortDateString()</td>
            <td>@bill.Frequency.ToString()</td>
            <td class="@(bill.IsPaid ? "text-success" : "")">
                @(bill.IsPaid ? "Paid" : "Unpaid")
            </td>
            <td>
                @if (!bill.IsPaid)
                {
                    var daysLeft = (bill.DueDate - DateTime.Now.AddDays(-1)).Days;
                    if (daysLeft >= 0)
                    {
                        <span>@daysLeft days left</span>
                    }
                    else
                    {
                        <span class="text-danger">Overdue by @Math.Abs(daysLeft-1) days</span>
                    }
                }
                else
                {
                    <span class="text-muted">Already Paid</span>
                }
            </td>
            <td>
                @if (!bill.IsPaid)
                {
                <form asp-controller="Bill" asp-action="Pay" asp-route-id="@bill.Id" method="post">
                    <button type="submit" class="btn btn-success">Pay</button>
                </form>
                }
                else
                {
                <span class="text-muted">Already Paid</span>
                }
            </td>
        </tr>
        }
        </tbody>
    </table>
</div>


<div>
    <h4>Navigate to Another Budget</h4>
    <form asp-controller="Budget" asp-action="Details" method="get">
        <div class="form-group">
            <label for="budgetSelect">Select Budget</label>
            <select id="budgetSelect" name="id" class="form-control" onchange="this.form.submit()">
                @foreach (var budget in Model.AllBudgets)
                {
                    <option value="@budget.Id" selected="@(budget.Id == Model.Budget.Id)">@budget.Name</option>
                }
            </select>
        </div>
    </form>
</div>
