@model ExpenseTrackingApplication.ViewModels.BudgetDetailsViewModel

@{
ViewData["Title"] = "Budget Details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Details for Budget: @Model.Budget.Name</h2>
    <a class="btn btn-success" asp-controller="Report" asp-action="Generate" asp-route-id="@Model.Budget.Id">Create Report</a>
</div>

<div class="info-boxes">
    <div class="info-box">
        <h4>Name:</h4>
        <p>@Model.Budget.Name</p>
    </div>
    <div class="info-box">
        <h4>Balance:</h4>
        <p class="balance @(Model.Budget.Balance >= 0 ? "positive" : "negative")">
            @Model.Budget.Balance.ToString("C")
        </p>
    </div>
    <div class="info-box">
        <h4>Total Transactions:</h4>
        <p>@Model.TotalTransactionAmount.ToString("C")</p>
    </div>
    <div class="info-box">
        <h4>Total Income:</h4>
        <p>@Model.TotalIncomeAmount.ToString("C")</p>
    </div>
</div>

<div>
    <h4>Budget Categories</h4>
    <a class="btn btn-success" asp-controller="BudgetCategory" asp-action="Create" asp-route-id="@Model.Budget.Id">Add BudgetCategory</a>
    <div class="row">
        @foreach (var category in Model.BudgetCategories)
        {
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@category.Name</h5>
                    <p class="card-text">
                        <strong>Type:</strong> @category.Type<br />
                        <strong>Current Balance:</strong> @category.CurrentBalance<br />
                        <strong>Limit:</strong> @category.Limit
                    </p>
                    <a class="btn btn-info" asp-controller="BudgetCategory" asp-action="Details" asp-route-id="@category.Id">View Details</a>
                </div>
            </div>
        </div>
        }
    </div>
</div>

<div>
    <h4>Transactions</h4>
    <table class="table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Recipient</th>
            <th>Amount</th>
            <th>Category</th>
            <th>Description</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var transaction in Model.Transactions)
        {
        <tr>
            <td>@transaction.Date.ToShortDateString()</td>
            <td>@transaction.Recipient</td>
            <td>@transaction.Amount</td>
            <td>@transaction.Category</td>
            <td>@transaction.Description</td>
        </tr>
        }
        </tbody>
    </table>
</div>

<div>
    <h4>Incomes</h4>
    <table class="table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Source</th>
            <th>Amount</th>
            <th>Category</th>
            <th>Description</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var income in Model.Incomes)
        {
        <tr>
            <td>@income.Date.ToShortDateString()</td>
            <td>@income.Source</td>
            <td>@income.Amount</td>
            <td>@income.Category</td>
            <td>@income.Description</td>
        </tr>
        }
        </tbody>
    </table>
</div>

<div>
    <h4>Navigate to Another Budget</h4>
    <form asp-controller="Budget" asp-action="Details" method="get">
        <div class="form-group">
            <label for="budgetSelect">Select Budget</label>
            <select id="budgetSelect" name="id" class="form-control" onchange="this.form.submit()">
                @foreach (var budget in Model.AllBudgets)
                {
                <option value="@budget.Id" selected="@(budget.Id == Model.Budget.Id)">@budget.Name</option>
                }
            </select>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
    <a asp-action="Edit" asp-route-id="@Model.Budget.Id" class="btn btn-warning">Edit</a>
</div>
