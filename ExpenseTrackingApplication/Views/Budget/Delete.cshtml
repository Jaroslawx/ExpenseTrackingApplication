@model ExpenseTrackingApplication.Models.Budget

@{
    ViewData["Title"] = "Delete Budget";
}

<h2>Are you sure you want to delete this budget?</h2>

<div class="form-group">
    <label asp-for="Balance" class="control-label">Amount</label>
    <input asp-for="Balance" class="form-control" readonly />
    <span asp-validation-for="Balance" class="text-danger"></span>
</div>

<form method="post" asp-action="DeleteBudget">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3" />
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</div>
