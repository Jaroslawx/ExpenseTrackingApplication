@model ExpenseTrackingApplication.ViewModels.BudgetViewModels.BudgetOverviewViewModel

<link rel="stylesheet" href="~/css/modal.css" asp-append-version="true"/>

<div class="modal fade" id="DeleteBudget-@Model.Id" aria-labelledby="deleteBudgetLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteBudgetLabel">Delete Budget</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="DeleteBudget" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <p>Are you sure you want to delete @Model.Name?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-cancel" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-delete">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
