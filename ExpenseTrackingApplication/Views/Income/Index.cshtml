@model IEnumerable<ExpenseTrackingApplication.Models.Income>

@{
    ViewData["Title"] = "Income";
}

<h2>Income</h2>

<table class="table">
    <thead>
    <tr>
        <th>Source</th>
        <th>Amount</th>
        <th>Date</th>
        <th>Category</th>
        <th>Description</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Source</td>
            <td>@item.Amount</td>
            <td>@item.Date.ToShortDateString()</td>
            <td>@item.Category</td>
            <td>@item.Description</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add Income</a>