@model IEnumerable<ExpenseTrackingApplication.ViewModels.ReportViewModel>

<div class="container mt-4">
    <h2 class="text-center mb-4">Choose a Report Type</h2>

    <div class="row">
        <!-- Monthly Summary Report -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Monthly Summary Report</h5>
                    <p class="card-text">
                        This report provides an overview of your expenses and income for the selected month, helping you track your savings.
                    </p>
                    <a asp-controller="Report" asp-action="CreateMonthlySummary" class="btn btn-primary">Create Report</a>
                </div>
            </div>
        </div>

        <!-- Category Expense Report -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Category Expense Report</h5>
                    <p class="card-text">
                        This report breaks down your expenses by categories, showing how much you're spending on different areas like groceries, rent, etc.
                    </p>
                    <a asp-controller="Report" asp-action="CreateExpensesByCategory" class="btn btn-primary">Create Report</a>
                </div>
            </div>
        </div>

        <!-- Trend Analysis Report -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Trend Analysis Report</h5>
                    <p class="card-text">
                        Analyze your spending patterns over time and identify trends to better manage your financial future.
                    </p>
                    <a asp-controller="Report" asp-action="CreateTrendAnalysis" class="btn btn-primary">Create Report</a>
                </div>
            </div>
        </div>
    </div>
</div>

<h2>Reports</h2>

<table class="table">
    <thead>
    <tr>
        <th>Report Name</th>
        <th>Report Type</th>
        <th>Created At</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var report in Model)
    {
    <tr>
        <td>@report.ReportName</td>
        <td>@report.ReportType</td>
        <td>@report.CreatedAt.ToString("yyyy-MM-dd")</td>
        <td>
            <a asp-action="ViewReport" asp-route-id="@report.ReportId" class="btn btn-primary">View</a>
        </td>
    </tr>
    }
    </tbody>
</table>
