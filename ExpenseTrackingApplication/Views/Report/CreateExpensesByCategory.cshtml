@model ExpenseTrackingApplication.ViewModels.CreateExpensesByCategoryViewModel

<h2>Create Expense by Category</h2>

<form asp-action="CreateExpensesByCategory" method="post">
    <div class="form-group">
        <label asp-for="BudgetId"></label>
        <select asp-for="BudgetId" asp-items="Model.AvailableBudgets" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Generate Report</button>
</form>