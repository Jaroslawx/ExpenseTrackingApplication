@model ExpenseTrackingApplication.Models.Bill

@{
    ViewData["Title"] = "Delete Bill";
}

<h2>Delete Bill</h2>

<div>
    <h4>Are you sure you want to delete this bill?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Model.Name</dd>
        <dt>Amount</dt>
        <dd>@Model.Amount.ToString("C")</dd>
        <dt>Due Date</dt>
        <dd>@Model.DueDate.ToShortDateString()</dd>
        <dt>Frequency</dt>
        <dd>@Model.Frequency</dd>
        <dt>Paid</dt>
        <dd>@(Model.IsPaid ? "Yes" : "No")</dd>
    </dl>
</div>

<form method="post" asp-action="DeleteBill">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Details" asp-route-id="@Model.BudgetId" class="btn btn-secondary">Cancel</a>
</form>