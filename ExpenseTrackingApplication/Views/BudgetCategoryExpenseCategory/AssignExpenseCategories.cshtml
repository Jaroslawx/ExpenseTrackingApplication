@model ExpenseTrackingApplication.ViewModels.BudgetViewModels.AssignExpenseCategoriesViewModel

<h2>Assign expense categories to Budget Category</h2>

<form asp-action="AssignExpenseCategories" method="post">
    <input type="hidden" asp-for="BudgetCategoryId" />

    <div>
        @if (Model.AllExpenseCategories.Any())
        {
        foreach (var category in Model.AllExpenseCategories)
        {
            <div>
                <input type="checkbox" name="SelectedCategories" value="@category"
                       @(Model.SelectedCategories != null && Model.SelectedCategories.Contains(category) ? "checked" : "") />
                @category
            </div>
        }
        }
        else
        {
            <p>No categories.</p>
        }
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
