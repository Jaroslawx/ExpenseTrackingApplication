@model ExpenseTrackingApplication.Models.Expense

@{
    ViewData["Title"] = "Delete Expense";
}

<h2>Delete Expense</h2>

<h3>Are you sure you want to delete this expense?</h3>

<form method="post" asp-action="Delete">
    <div class="form-group">
        <label>Recipient</label>
        <p>@Model.Recipient</p>
    </div>
    <div class="form-group">
        <label>Amount</label>
        <p>@Model.Amount</p>
    </div>
    <div class="form-group">
        <label>Date</label>
        <p>@Model.Date.ToShortDateString()</p>
    </div>
    <div class="form-group">
        <label>Category</label>
        <p>@Model.Category</p>
    </div>
    <div class="form-group">
        <label>Description</label>
        <p>@Model.Description</p>
    </div>
</form>

<form method="post" asp-action="DeleteExpense">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<div>
    <a asp-controller="Budget" asp-action="Edit" asp-route-id="@Model.BudgetId" class="btn btn-secondary">Back</a>
</div>